<%= form_for(@post) do |f| %>

    <%= render 'shared/error_message' %> 

    <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "Choose a category"}) %><br>
    <%=f.label :title %><br>
    <%=f.text_field  :title, placeholder: "Type this post here" %><br>
    <%=f.label :content %><br>
    <%=f.text_area :content, size: "60x12", placeholder: "Type the text here"%><br>
    <%=f.submit %>

<% end %>
